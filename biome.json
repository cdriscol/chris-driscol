{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true
  },
  "css": {
    "parser": {
      "cssModules": false,
      "allowWrongLineComments": false,
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!!**/legacy/**",
      "!!**/apps/web/dist/**",
      "!!**/dist/**",
      "!!**/apps/web/public/**",
      "!!**/src/graphql/generated/**",
      "!!**/apps/web/src/graphql/generated/**",
      "!!**/target/**",
      "!!**/*.lock",
      "!!**/*.min.*"
    ]
  }
}
