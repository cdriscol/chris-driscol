---
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
  type?: "website" | "article";
  publishedTime?: Date;
  modifiedTime?: Date;
}

const {
  title,
  description,
  image = "/og-image.svg",
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = "website",
  publishedTime,
  modifiedTime,
} = Astro.props;

const siteTitle = "Chris Driscol";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const imageURL = new URL(image, Astro.site);

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: siteTitle,
  url: Astro.site?.toString(),
  description: "Writing about tech, AI, motorsports, and life.",
  author: {
    "@type": "Person",
    name: "Chris Driscol",
    url: "https://chrisdriscol.com",
  },
};

const articleSchema =
  type === "article"
    ? {
        "@context": "https://schema.org",
        "@type": "Article",
        headline: title,
        description: description,
        image: imageURL.toString(),
        datePublished: publishedTime?.toISOString(),
        dateModified: modifiedTime?.toISOString() || publishedTime?.toISOString(),
        author: {
          "@type": "Person",
          name: "Chris Driscol",
          url: "https://chrisdriscol.com",
        },
        publisher: {
          "@type": "Person",
          name: "Chris Driscol",
        },
      }
    : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteTitle}
      href={new URL("/rss.xml", Astro.site)}
    />

    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content={siteTitle} />
    {publishedTime && <meta property="article:published_time" content={publishedTime.toISOString()} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime.toISOString()} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />

    <!-- JSON-LD -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    {articleSchema && <script is:inline type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}

    </head>
  <body>
    <slot />
  </body>
</html>
