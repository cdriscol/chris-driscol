{
  "skill-developer": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Meta-skill for creating and managing Claude Code skills",
    "promptTriggers": {
      "keywords": [
        "skill system",
        "create skill",
        "add skill",
        "skill triggers",
        "skill rules",
        "hook system",
        "skill development",
        "skill-rules.json"
